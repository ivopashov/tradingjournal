<h1>Edit Trade</h1>

<%= form_for(@trade) do |form| %>
  <% if !@trade.is_imported %>
  <div class="form-group">
    <%= form.label :symbol, class: 'form-label' %><br>
    <%= form.text_field :symbol, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :quantity, class: 'form-label' %><br>
    <%= form.number_field :quantity, step: :any, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :price, class: 'form-label' %><br>
    <%= form.number_field :price, step: :any, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :currency, class: 'form-label' %><br>
    <%= form.text_field :currency, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :commission, class: 'form-label' %><br>
    <%= form.number_field :commission, step: :any, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :trade_date, class: 'form-label' %><br>
    <%= form.datetime_field :trade_date, class: 'form-control' %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :notes, class: 'form-label' %><br>
    <%= form.text_area :notes, size: "60x10", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Edit', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
