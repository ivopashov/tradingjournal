<h1>New Heat Map</h1>

<% if @heat_map.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@heat_map.errors.count, "error") %> prohibited this heat map from being saved:</h2>

    <ul>
      <% @heat_map.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @heat_map do |form| %>
  <div class="form-group">
    <%= form.label :name, class: "form-label" %><br>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :tickers, class: "form-label" %><br>
    <%= form.text_field :tickers, class: 'form-control', placeholder: 'Max 25 comma separated tickers e.g. AMZN,MSFT,AAPL...' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Add', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>