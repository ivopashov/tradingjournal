<h1>New Price Alert</h1>

<% if @price_alert.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@price_alert.errors.count, "error") %> prohibited this price alert from being saved:</h2>

    <ul>
      <% @price_alert.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @price_alert do |form| %>
  <div class="form-group">
    <%= form.label :name, class: 'form-label' %><br>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :ticker, class: 'form-label' %><br>
    <%= form.text_field :ticker, step: :any, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :comparison_operator, class: 'form-label' %><br>
    <%= form.text_field :comparison_operator, step: :any, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price, class: 'form-label' %><br>
    <%= form.number_field :price, step: :any, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Add', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
